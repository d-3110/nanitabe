// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  id          Int      @id @default(autoincrement())
  name        String   @db.VarChar(255)
  email       String   @db.VarChar(255)
  password    String   @db.VarChar(255)
  created_at  DateTime @default(now()) @db.Timestamp(0)
  updated_at  DateTime @default(now()) @updatedAt @db.Timestamp(0)
}

model meals {
  id          Int      @id @default(autoincrement())
  type        Int      @db.TinyInt
  name        String   @db.VarChar(255)
  note        String?  @db.Text
  created_at  DateTime @default(now()) @db.Timestamp(0)
  updated_at  DateTime @default(now()) @updatedAt @db.Timestamp(0)
  meal_tags   meal_tags[]   @relation("meal_fk_1")
  histories   histories[]   @relation("meal_fk_2")
}

model tags {
  id          Int      @id @default(autoincrement())
  name        String   @unique @db.VarChar(255)
  created_at  DateTime @default(now()) @db.Timestamp(0)
  updated_at  DateTime @default(now()) @updatedAt @db.Timestamp(0)
  meal_tags   meal_tags[]   @relation("tag_fk_1")
}

model meal_tags {
  id          Int      @id @default(autoincrement())
  meal_id     Int
  meals       meals    @relation(name: "meal_fk_1", fields: [meal_id], references: [id])
  tag_id      Int
  tags        tags     @relation(name: "tag_fk_1", fields: [tag_id], references: [id])
  created_at  DateTime @default(now()) @db.Timestamp(0)
  updated_at  DateTime @default(now()) @updatedAt @db.Timestamp(0)
}

model histories {
  id          Int      @id @default(autoincrement())
  meal_id     Int
  meals       meals    @relation(name: "meal_fk_2", fields: [meal_id], references: [id])
  created_at  DateTime @default(now()) @db.Timestamp(0)
  updated_at  DateTime @default(now()) @updatedAt @db.Timestamp(0)
}

